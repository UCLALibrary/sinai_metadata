{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/excerpt.json",
    "title": "Excerpt",
    "description": "An excerpt from a larger work or text, such as the incipit",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "incipit",
                "explicit",
                "prologue"
            ]
        },
        "locus": {
            "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/utils.json#/$defs/locus"
        },
        "as_written": {
            "type": "string",
            "minLength": 1
        },
        "translation": {
            "type": ["array", "null"],
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/utils.json#/$defs/translation"
            },
            "unevaluatedItems": false
        },
        "note": {
            "type": ["array", "null"],
            "items": {
                "$ref": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/note.json"
            },
            "unevaluatedItems": false
        }
    },
    "required": [
        "type",
        "as_written"
    ]
}