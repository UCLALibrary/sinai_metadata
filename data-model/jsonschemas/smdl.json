{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/smdl.json",
    "title": "Manuscript Object",
    "description": "A manuscript or codex, either real or a hypothetical reconstruction",
    "type": "object",
    "properties": {
        "ark": {
            "$ref": "#/$defs/ark"
        },
        "reconstruction": {
            "type": "boolean"
        },
        "type": {
            "type": "string"
        },
        "shelfmark": {
            "type": "string",
            "minLength": 1
        },
        "ms_date": {
            "$ref": "#/$defs/iso_date",
            "$comment": "Generate from earliest to latest date from overtext layers. if single date, yyyy, if range, yyyy/yyyy"
        },
        "summary": {
            "type": "string"
        },
        "extent": {
            "type": "string"
        },
        "weight": {
            "type": "string"
        },
        "dim": {
            "type": "string"
        },
        "state": {
            "type": "string"
        },
        "fol": {
            "type": "string"
        },
        "coll": {
            "type": "string"
        },
        "genre": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false
        },
        "features": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "unevaluatedItems": false
        },
        "part": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/part"
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "uto": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/uto"
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "guest_layer": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/layer"
            },
            "minItems": 1,
            "unevaluatedItems": false
        },
        "para": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/paracontent"
            },
            "unevaluatedItems": false
        },
        "related_mss": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/related_mss"
            },
            "unevaluatedItems": false
        },
        "location": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "repository": {
                        "type": "string"
                    },
                    "collection": {
                        "type": "string"
                    }
                },
                "required": [
                    "repository"
                ],
                "unevaluatedProperties": false
            },
            "minItems": 1,
            "unevaluatedItems": false
