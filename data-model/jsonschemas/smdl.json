                "shortcode"
            ]
        },
        "iso_date": {
            "type": "string",
            "pattern": "^[0-9]{4}(\/[0-9]{4})?",
            "$comment": "TBD regex refinement"
        },
        "layer": {
            "type": "object",
            "properties": {
                "ark": {
                    "$ref": "#/$defs/ark"
                },
                "type": {
                    "type": "string"
