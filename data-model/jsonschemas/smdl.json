        "paracontent": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "locus": {
                    "type": "string"
                },
                "script": {
                    "type": "array",
                    "items": {
