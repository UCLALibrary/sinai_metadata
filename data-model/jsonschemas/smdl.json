                    "minItems": 1,
                    "unevaluatedItems": false
                },
                "uto": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/uto"
                    },
                    "minItems": 1,
                    "unevaluatedItems": false
                },
                "guest_layer": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/layer"
                    },
                    "minItems": 1,
                    "unevaluatedItems": false
                },
                "para": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/paracontent"
                    },
                    "unevaluatedItems": false
                },
                "note": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/typed_note"
