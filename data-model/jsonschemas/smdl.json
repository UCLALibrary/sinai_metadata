            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "value"
            ],
            "unevaluatedProperties": false
        },
        "uto": {
            "type": "object",
            "properties": {
                "ms_ark": {
                    "$ref": "#/$defs/ark"
                },
                "uto_ark": {
                    "$ref": "#/$defs/ark"
                },
                "label": {
                    "type": "string"
                },
                "script": {
                    "type": "array",
                    "items": {
