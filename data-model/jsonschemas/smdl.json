            "$comment": "TBD. Should it be required? | what gets included in this obj?"
        },
        "reconstructed_from": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ark"
            },
            "unevaluatedItems": false
        },
        "last_modified": {
            "type": "string",
            "format": "date",
            "$comment": "TBD: use date-time? Q for t&b about what the | also verify if should be required"
        }
    },
    "required": [
        "ark",
        "reconstruction",
        "type",
        "shelfmark",
        "ms_date",
        "extent",
        "state",
        "part",
        "location",
        "last_modified"
    ],
    "unevaluatedProperties": false,
    "$defs": {
        "ark": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
        },
        "assoc_date": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "iso": {
                    "$ref": "#/$defs/iso_date"
                },
                "as_written": {
                    "type": "string"
                },
                "note": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "unevaluatedItems": false
                }
            },
            "$comment": "TBD, check required fields: type, value, iso??",
            "required": [
                "type"
            ],
            "unevaluatedProperties": false
        },
        "assoc_name": {
            "type": "object",
            "properties": {
                "pref_name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "as_written": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "note": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "unevaluatedItems": false
                }
            },
            "required": [
                "role"
