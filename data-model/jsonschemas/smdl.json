                                    "type": "string"
                                },
                                "unevaluatedItems": false
                            }
                        },
                        "unevaluatedProperties": false
                    }
                },
                "text_unit": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/text_unit"
                    },
                    "minItems": 1,
                    "unevaluatedItems": false
                },
                "para": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/paracontent"
                    },
                    "unevaluatedItems": false
                },
                "assoc_date": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/assoc_date"
                    },
                    "unevaluatedItems": false
                },
                "assoc_name": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/assoc_name"
                    },
                    "unevaluatedItems": false
                },
                "assoc_place": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/assoc_place"
                    },
                    "unevaluatedItems": false
                },
                "note": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/typed_note"
                    },
                    "unevaluatedItems": false
                }
            },
            "required": [
                "ark",
                "type",
                "writing",
                "text_unit"
            ],
            "unevaluatedProperties": false
