        "assoc_date": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/assoc_date"
            },
            "unevaluatedItems": false
        },
        "assoc_name": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/assoc_name"
            },
            "unevaluatedItems": false
        },
        "assoc_place": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/assoc_place"
            },
            "unevaluatedItems": false
        },
