            "$comment": "TBD: typed 'data visualization' property instead?",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "type",
                    "label",
                    "url"
                ],
                "unevaluatedProperties": false
            },
            "unevaluatedItems": false
        },
        "bib": {
            "type": "array",
            "items": {
                "type": "object",
                "allOf": [
                    {
                        "properties": {
                            "type": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "type"
                        ]
                    },
                    {
                        "$ref": "#/$defs/bib"
                    }
                ],
                "unevaluatedProperties": false
            },
            "unevaluatedItems": false
        },
        "note": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/typed_note"
            },
            "unevaluatedItems": false
        },
        "iiif": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "manifest": {
                        "type": "string",
                        "format": "uri"
                    },
                    "type": {
                        "type": "string"
                    }
                },
                "required": [
                    "manifest",
                    "type"
