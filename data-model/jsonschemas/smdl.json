                },
                "as_written": {
                    "type": "string"
                },
                "event": {
                    "type": "string"
                },
                "note": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "unevaluatedItems": false
                }
            },
            "required": [
                "event"
            ],
            "unevaluatedProperties": false,
            "$comment": "TBD: review required fields"
        },
        "bib": {
            "type": "object",
            "properties": {
                "shortcode": {
                    "type": "string"
                },
                "range": {
                    "type": "string"
                },
                "alt_shelf": {
                    "type": "string"
                },
                "url": {
