{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/enums.json",
    "title": "Utilities",
    "description": "A collection of sub-schemas containing the controlled vocabularies and enumerated value lists for the Sinai Manuscripts Data Portal",
    "type": "null",
    "$defs": {
        "agent_types": {
            "enum": [
                "person",
                "organization"
            ]
        },
        "assoc_date_types": {
            "enum": [
                "creation",
                "binding",
                "origin",
                "purchase",
                "birth",
                "death",
                "floruit",
                "unknown"
            ],
            "$comment": "TBD full list of types"
        },
        "assoc_name_roles": {
            "type": "string",
            "enum": [
                "author",
                "attributed-author",
                "creator",
                "binder",
                "owner",
                "unknown"
            ]
        },
        "assoc_place_events": {
            "type": "string",
            "enum": [
                "origin",
                "previous_repository",
                "unknown"
            ]
        },
        "bib_types": {
            "type": "string",
            "enum": [
                "cite",
                "edition",
                "otherdigversion",
                "ref",
                "refno",
                "translation"
            ]
        },
        "cod_unit_types": {
            "description": "The type of codicological unit, e.g. a part, layer, etc.",
            "enum": [
                "part",
                "uto",
                "rebind"
            ]
        },
        "collections": {
            "type": "string",
            "enum": [
                "Old Collection",
                "New Finds",
                "Reconstructions"
            ]
        },
        "content_unit_types": {
            "description": "The type of manuscript object, whether real or hypothetical reconstructions",
            "enum": [
                "shelf",
                "rebind"
            ],
            "$comment": "Is this the same set as #/$defs/ms_obj_types?"
        },
        "creator_roles": {
            "enum": [
                "author",
                "editor",
                "translator"
            ]
        },
        "dimension_types": {
            "enum": [
                "ms_block",
                "folio",
                "av_folio",
                "writing_area",
                "margins"
            ]
        },
        "excerpt_types": {
            "type": "string",
            "enum": [
                "incipit",
                "explicit",
                "prologue"
            ]
        },
        "features": {
            "enum": [
                "Border(s)",
                "Border(s), Decorative",
                "Calligraphic Practice",
                "Catchwords",
                "Colophon",
                "Dated",
                "Decoration, Anthropomorphic",
                "Decoration, Architectural",
                "Decoration, Calligraphic",
                "Decoration, Full-page",
                "Decoration, Geometric",
                "Decoration, Vegetative",
                "Decoration, Zoomorphic",
                "Fragment",
                "Headpiece(s)",
                "Illumination(s)",
                "Illustration(s)",
                "Initial(s), Anthropomorphic",
                "Initial(s), Decorated",
                "Initial(s), Gymnastic",
                "Initial(s), Historiated",
                "Initial(s), Inhabited",
                "Initial(s), Zoomorphic",
                "Inscription(s)",
                "Miniature(s)",
                "Multispectral Imaging",
                "Music notation",
                "Palimpsest",
                "Parallel text",
                "Signatures",
                "Table(s)",
                "Table(s) of Contents",
                "Unidentified text",
                null
            ],
            "$comment": "TBD list of features | Could do a series of features based on context with a composition for groups?"
        },
        "forms": {
            "description": "The original form of the manuscript object",
            "enum": [
                "Bifolim",
                "Codex",
                "Folium",
                "Quire(s)",
                "Scroll",
                null
            ],
            "$comment": "This enum is reused and expanded in #/$defs/states"
        },
        "genders": {
            "enum": [
                "Man",
                "Woman",
                "Other"
            ]
        },
        "genres": {
            "description": "The genre of the work record",
            "type": ["array", "null"],
            "items": {
                "enum": [
                    "Account books",
                    "Apocrypha",
                    "Apophthegmata",
                    "Biblical texts",
                    "Blessings",
                    "Calendars",
                    "Canon law",
                    "Charters",
                    "Commentaries",
                    "Dictionaries",
                    "Gospel books",
                    "Hagiographies",
                    "Historical works",
                    "Hymnals",
                    "Lectionaries",
                    "Liturgical texts",
                    "Martyrologies",
                    "Mimars",
                    "Philosophical works",
                    "Poetry",
                    "Prayers",
                    "Scientific works",
                    "Sermons",
                    "Theological works"
                ]
            },
            "unevaluatedItems": false
        },
        "idno_types": {
            "enum": [
                "shelfmark",
                "part_no",
                "uto_mark"
            ],
            "$comment": "Use term 'shelfmark' for both real and digitally rebound manuscript objects"
        },
        "iiif_types": {
            "type": "string",
            "enum": [
                "main",
                "reordered"
            ]
        },
        "iiif_text_directions": {
            "type": "string",
            "enum": [
                "right-to-left",
                "top-to-bottom",
                "bottom-to-top",
                null
            ]
        },
        "iiif_behaviors": {
            "type": "string",
            "enum": [
                "paged",
                "individuals"
            ]
        },
        "langs_all": {
            "description": "All names available in the Sinai Manuscripts Data Portal, both ancient and modern",
            "anyOf": [
                {
                    "$ref": "#/$defs/langs_ancient"
                },
                {
                    "$ref": "#/$defs/langs_modern"
                }
            ]
        },
        "langs_ancient": {
            "description": "Names of the ancient languages used in Sinai Manuscripts Data Portal",
            "enum": [
                "Arabic",
                "Armenian",
                "Caucasian Albanian",
                "Church Slavonic",
                "Coptic",
                "CPA",
                "Ethiopic",
                "Georgian",
                "Greek",
                "Latin",
                "Syriac",
                "Turkish"
            ]
        },
        "langs_modern": {
            "description": "Names of the modern languages used in Sinai Manuscripts Data Portal",
            "enum": [
                "Arabic",
                "English", 
                "French", 
                "German",
                "Greek"
            ]
        },
        "ms_obj_types": {
            "description": "The type of manuscript object, whether real or hypothetical reconstructions",
            "enum": [
                "shelf",
                "rebind"
            ],
            "$comment": "Is this the same set as #/$defs/cod_unit_types and #/$defs/content_unit_types?"
        },
        "note_types": {
            "type": "string",
            "enum": [
                "admin",
                "assoc_date",
                "assoc_name",
                "assoc_place",
                "bib",
                "binding",
                "cataloguer",
                "coll",
                "condition",
                "contents",
                "excerpt",
                "foliation",
                "general",
                "layout",
                "ornamentation",
                "para",
                "provenance",
                "rel_work",
                "related_mss",
                "support",
                "writing"
            ]
        },
        "paracontent_types": {
            "type": "string",
            "enum": [
                "endowment",
                "rubric"
            ],
            "$comment": "Initial enum for paracontent needed | Also considerations of 'para' vs 'guest' in same field?"
        },
        "place_types": {
            "enum": [
                "building",
                "church",
                "composite",
                "designated-space",
                "diocese",
                "fortification",
                "island",
                "madrasa",
                "monastery",
                "mosque",
                "mountain",
                "natural feature",
                "open-water",
                "parish",
                "province",
                "quarter",
                "region",
                "river",
                "settlement",
                "state",
                "synagogue",
                "temple",
                "unknown"
            ],
            "$comment": "Place types from https://syriaca.org/documentation/place-types.html"
        },
        "refno_source_types": {
            "enum": [
                "CPG",
                "CPL",
                "TLG"
            ]
        },
        "rel_agent_rels": {
            "enum": [
                "familyMember",
                "memberOf"
            ]
        },
        "rel_con_source_types": {
            "enum": [
                "HAF",
                "LoC",
                "Perseus",
                "Pinakes",
                "Pleiades",
                "Syriaca",
                "VIAF"
            ]
        },
        "rel_place_rels": {
            "enum": [
                "birthPlace",
                "deathPlace"
            ]
        },
        "rel_work_rels": {
            "enum": [
                "partOf",
                "hasPart",
                "hasVersion"
            ]
        },
        "related_mss_types": {
            "type": "string",
            "enum": [
                "filiation",
                "disjecta"
            ]
        },
        "scripts": {
            "description": "Term list categorizing the writing system and script used in a given instance of writing",
            "enum": [
                "Asomtavruli",
                "Carolingian majuscule",
                "Carolingian minuscule",
                "Christian Palestinian Aramaic",
                "East Syriac",
                "Erkatagir",
                "Estrangela",
                "Geʽez abjad",
                "Geʽez abugida",
                "Glagolitic",
                "Greek majuscule",
                "Greek minuscule",
                "Khutsuri",
                "Kufic",
                "Melkite",
                "Minuscule bouclée",
                "Mkhedruli",
                "Naskh",
                "Nastaliq",
                "Nuskhurimt",
                "Perlschrift",
                "Serto",
                "Thuluth"
            ],
            "$comment": "enum not complete. Will eventually be references to script records"
        },
        "states": {
            "description": "The current state of the manuscript object",
            "anyOf": [
                {
                    "$ref": "#/$defs/forms"
                },
                {
                    "enum": ["Undertext object"]
                }
            ],
            "$comment": "State allows the same enumerated value list as #/$defs/forms with the addition of Undertext object"
        },
        "supports": {
            "enum": [
                "Paper",
                "Papyrus",
                "Parchment"
            ],
            "$comment": "Should these point to a record rather than being enum strings?"
        },
        "viscodex_types": {
            "type": "string",
                "enum": [
                    "ms_obj",
                    "reconstruction"
                ],
                "$comment": "Likely expand this enum?"
        }
    }
}