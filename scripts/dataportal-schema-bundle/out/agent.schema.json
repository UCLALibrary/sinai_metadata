{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/agent.json",
  "title": "Agent",
  "description": "A record for an agent, either an individual or an organization, capable of acting in the production of material objects or creation of conceptual works",
  "type": "object",
  "properties": {
    "ark": {
      "description": "A unique Archival Resource Key (ARK)",
      "type": "string",
      "pattern": "^ark:/21198/([a-z]|[0-9])+"
    },
    "type": {
      "enum": [
        "person",
        "organization"
      ]
    },
    "pref_name": {
      "type": "string",
      "minLength": 1
    },
    "alt_name": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "minLength": 1
      },
      "unevaluatedItems": false
    },
    "desc": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "gender": {
      "enum": [
        "Man",
        "Woman",
        "Other"
      ]
    },
    "birth": {
      "unevaluatedProperties": false,
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "minLength": 1
        },
        "iso": {
          "type": "object",
          "properties": {
            "not_before": {
              "type": "string",
              "format": "date",
              "minLength": 3
            },
            "not_after": {
              "type": [
                "string",
                "null"
              ],
              "format": "date",
              "minLength": 3
            }
          },
          "required": [
            "not_before"
          ],
          "unevaluatedProperties": false
        }
      },
      "required": [
        "value",
        "iso"
      ]
    },
    "death": {
      "unevaluatedProperties": false,
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "minLength": 1
        },
        "iso": {
          "type": "object",
          "properties": {
            "not_before": {
              "type": "string",
              "format": "date",
              "minLength": 3
            },
            "not_after": {
              "type": [
                "string",
                "null"
              ],
              "format": "date",
              "minLength": 3
            }
          },
          "required": [
            "not_before"
          ],
          "unevaluatedProperties": false
        }
      },
      "required": [
        "value",
        "iso"
      ]
    },
    "floruit": {
      "unevaluatedProperties": false,
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "minLength": 1
        },
        "iso": {
          "type": "object",
          "properties": {
            "not_before": {
              "type": "string",
              "format": "date",
              "minLength": 3
            },
            "not_after": {
              "type": [
                "string",
                "null"
              ],
              "format": "date",
              "minLength": 3
            }
          },
          "required": [
            "not_before"
          ],
          "unevaluatedProperties": false
        }
      },
      "required": [
        "value",
        "iso"
      ]
    },
    "rel_con": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A related concept to a given entity provided by another authority file. May be connected via a skos:closeMatch property",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "format": "uri",
            "minLength": 1
          },
          "source": {
            "enum": [
              "HAF",
              "LoC",
              "Perseus",
              "Pinakes",
              "Pleiades",
              "Syriaca",
              "VIAF"
            ]
          }
        },
        "required": [
          "label",
          "uri",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "refno": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A reference number in a standard reference work, such as the Corpus Clavium Graecorum (CPG)",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "idno": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "enum": [
              "CPG",
              "CPL",
              "TLG"
            ]
          }
        },
        "required": [
          "label",
          "uri",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "bib": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/bib.json",
        "title": "Bibliography",
        "description": "A bibliographic citation connected with an object or entity",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "$comment": "Foreign key referring to the bibliographic item in the database"
          },
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "range": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "alt_shelf": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "note": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "$schema": "https://json-schema.org/draft/2020-12/schema",
              "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/note.json",
              "title": "Note",
              "description": "A prose note of a specified type",
              "type": "object",
              "properties": {
                "type": {
                  "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id",
                    "label"
                  ],
                  "unevaluatedProperties": false
                },
                "value": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 1
                }
              },
              "required": [
                "type",
                "value"
              ],
              "unevaluatedProperties": false
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "id",
          "type"
        ],
        "if": {
          "properties": {
            "type": {
              "const": "otherdigversion"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "url": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "id",
            "type",
            "url"
          ]
        },
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "note": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/note.json",
        "title": "Note",
        "description": "A prose note of a specified type",
        "type": "object",
        "properties": {
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "value": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          }
        },
        "required": [
          "type",
          "value"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "rel_agent": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
          },
          "rel": {
            "type": "array",
            "items": {
              "enum": [
                "familyMember",
                "memberOf"
              ]
            },
            "unevaluatedItems": false
          },
          "source": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            },
            "unevaluatedItems": false
          }
        },
        "unevaluatedProperties": false,
        "required": [
          "id",
          "rel"
        ]
      },
      "unevaluatedItems": false
    },
    "rel_place": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
          },
          "rel": {
            "type": "array",
            "items": {
              "enum": [
                "birthPlace",
                "deathPlace"
              ]
            },
            "unevaluatedItems": false
          },
          "source": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            },
            "unevaluatedItems": false
          }
        },
        "unevaluatedProperties": false,
        "required": [
          "id",
          "rel"
        ]
      },
      "unevaluatedItems": false
    },
    "internal": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      },
      "unevaluatedItems": false
    },
    "cataloguer": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "minLength": 1,
            "$comment": "possibly can set min-length based on ISO timestamp length?"
          },
          "comment": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          }
        },
        "required": [
          "id",
          "timestamp"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    }
  },
  "required": [
    "ark",
    "type",
    "pref_name"
  ],
  "unevaluatedProperties": false
}