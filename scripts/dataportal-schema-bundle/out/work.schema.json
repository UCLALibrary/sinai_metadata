{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/work.json",
  "title": "Conceptual Work",
  "description": "A record for a conceptual work, which may be carried or embodied by a textual artifact or work witness",
  "type": "object",
  "properties": {
    "ark": {
      "description": "A unique Archival Resource Key (ARK)",
      "type": "string",
      "pattern": "^ark:/21198/([a-z]|[0-9])+"
    },
    "pref_title": {
      "type": "string",
      "minLength": 1,
      "$comment": "Possibly rename as pref_name; add to util.json"
    },
    "orig_lang": {
      "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "id",
        "label"
      ],
      "unevaluatedProperties": false
    },
    "orig_lang_title": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "alt_title": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "minLength": 1
      },
      "unevaluatedItems": false
    },
    "desc": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "genre": {
      "description": "The genre of the work record",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "enum": [
          "Account books",
          "Apocrypha",
          "Apophthegmata",
          "Biblical texts",
          "Blessings",
          "Calendars",
          "Canon law",
          "Charters",
          "Commentaries",
          "Dictionaries",
          "Gospel books",
          "Hagiographies",
          "Historical works",
          "Hymnals",
          "Lectionaries",
          "Liturgical texts",
          "Martyrologies",
          "Mimars",
          "Philosophical works",
          "Poetry",
          "Prayers",
          "Scientific works",
          "Sermons",
          "Theological works"
        ]
      },
      "unevaluatedItems": false
    },
    "creator": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
          },
          "role": {
            "enum": [
              "author",
              "editor",
              "translator"
            ]
          }
        }
      }
    },
    "creation": {
      "unevaluatedProperties": false,
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "minLength": 1
        },
        "iso": {
          "type": "object",
          "properties": {
            "not_before": {
              "type": "string",
              "format": "date",
              "minLength": 3
            },
            "not_after": {
              "type": [
                "string",
                "null"
              ],
              "format": "date",
              "minLength": 3
            }
          },
          "required": [
            "not_before"
          ],
          "unevaluatedProperties": false
        }
      },
      "required": [
        "value",
        "iso"
      ]
    },
    "excerpt": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/excerpt.json",
        "title": "Excerpt",
        "description": "An excerpt from a larger work or text, such as the incipit",
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "incipit",
              "explicit",
              "prologue"
            ]
          },
          "locus": {
            "type": "string",
            "minLength": 1,
            "$comment": "Can use format to restrain to regex for, e.g., 'ff. x-y'"
          },
          "as_written": {
            "type": "string",
            "minLength": 1
          },
          "translation": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "description": "The translation of a piece of content, such as an excerpt from a text or paratext, or from a conceptual work entity.",
              "properties": {
                "lang": {
                  "description": "Names of the modern languages used in Sinai Manuscripts Data Portal",
                  "enum": [
                    "Arabic",
                    "English",
                    "French",
                    "German",
                    "Greek"
                  ]
                },
                "value": {
                  "type": "string",
                  "minLeng": 1
                }
              },
              "required": [
                "lang",
                "value"
              ]
            },
            "unevaluatedItems": false
          },
          "note": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "$schema": "https://json-schema.org/draft/2020-12/schema",
              "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/note.json",
              "title": "Note",
              "description": "A prose note of a specified type",
              "type": "object",
              "properties": {
                "type": {
                  "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id",
                    "label"
                  ],
                  "unevaluatedProperties": false
                },
                "value": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 1
                }
              },
              "required": [
                "type",
                "value"
              ],
              "unevaluatedProperties": false
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "type",
          "as_written"
        ]
      },
      "unevaluatedItems": false
    },
    "rel_con": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A related concept to a given entity provided by another authority file. May be connected via a skos:closeMatch property",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "format": "uri",
            "minLength": 1
          },
          "source": {
            "enum": [
              "HAF",
              "LoC",
              "Perseus",
              "Pinakes",
              "Pleiades",
              "Syriaca",
              "VIAF"
            ]
          }
        },
        "required": [
          "label",
          "uri",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "refno": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A reference number in a standard reference work, such as the Corpus Clavium Graecorum (CPG)",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "idno": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "enum": [
              "CPG",
              "CPL",
              "TLG"
            ]
          }
        },
        "required": [
          "label",
          "idno",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "bib": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/bib.json",
        "title": "Bibliography",
        "description": "A bibliographic citation connected with an object or entity",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "$comment": "Foreign key referring to the bibliographic item in the database"
          },
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "range": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "alt_shelf": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "note": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "$schema": "https://json-schema.org/draft/2020-12/schema",
              "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/note.json",
              "title": "Note",
              "description": "A prose note of a specified type",
              "type": "object",
              "properties": {
                "type": {
                  "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id",
                    "label"
                  ],
                  "unevaluatedProperties": false
                },
                "value": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 1
                }
              },
              "required": [
                "type",
                "value"
              ],
              "unevaluatedProperties": false
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "id",
          "type"
        ],
        "if": {
          "properties": {
            "type": {
              "const": "otherdigversion"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "url": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "id",
            "type",
            "url"
          ]
        },
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "note": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/note.json",
        "title": "Note",
        "description": "A prose note of a specified type",
        "type": "object",
        "properties": {
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "value": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          }
        },
        "required": [
          "type",
          "value"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "rel_work": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
          },
          "rel": {
            "type": "array",
            "items": {
              "enum": [
                "partOf",
                "hasPart",
                "hasVersion"
              ]
            },
            "unevaluatedItems": false
          },
          "source": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "id",
          "rel"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "rel_agent": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
          },
          "rel": {
            "type": "array",
            "items": {
              "enum": [
                "familyMember",
                "memberOf"
              ]
            },
            "unevaluatedItems": false
          },
          "source": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            },
            "unevaluatedItems": false
          }
        },
        "unevaluatedProperties": false,
        "required": [
          "id",
          "rel"
        ]
      },
      "unevaluatedItems": false
    },
    "rel_place": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique Archival Resource Key (ARK)",
            "type": "string",
            "pattern": "^ark:/21198/([a-z]|[0-9])+"
          },
          "rel": {
            "type": "array",
            "items": {
              "enum": [
                "birthPlace",
                "deathPlace"
              ]
            },
            "unevaluatedItems": false
          },
          "source": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            },
            "unevaluatedItems": false
          }
        },
        "unevaluatedProperties": false,
        "required": [
          "id",
          "rel"
        ]
      },
      "unevaluatedItems": false
    },
    "internal": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      },
      "unevaluatedItems": false
    },
    "cataloguer": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "minLength": 1,
            "$comment": "possibly can set min-length based on ISO timestamp length?"
          },
          "comment": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          }
        },
        "required": [
          "id",
          "timestamp"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    }
  },
  "required": [
    "ark",
    "pref_title"
  ],
  "unevaluatedProperties": false
}