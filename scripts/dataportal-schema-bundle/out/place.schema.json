{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/place.json",
  "title": "Place",
  "description": "A record for a place, including both physical spaces and mental/conceptual places that may not be locatable on a geospatial system",
  "type": "object",
  "properties": {
    "ark": {
      "description": "A unique Archival Resource Key (ARK)",
      "type": "string",
      "pattern": "^ark:/21198/([a-z]|[0-9])+"
    },
    "type": {
      "enum": [
        {
          "id": "building",
          "label": "Building"
        },
        {
          "id": "church",
          "label": "Church"
        },
        {
          "id": "composite",
          "label": "Composite"
        },
        {
          "id": "designated-space",
          "label": "Designated Space"
        },
        {
          "id": "diocese",
          "label": "Diocese"
        },
        {
          "id": "fortification",
          "label": "Fortification"
        },
        {
          "id": "island",
          "label": "Island"
        },
        {
          "id": "madrasa",
          "label": "Madrasa"
        },
        {
          "id": "monastery",
          "label": "Monastery"
        },
        {
          "id": "mosque",
          "label": "Mosque"
        },
        {
          "id": "mountain",
          "label": "Mountain"
        },
        {
          "id": "natural feature",
          "label": "Natural Feature"
        },
        {
          "id": "open-water",
          "label": "Open Water"
        },
        {
          "id": "parish",
          "label": "Parish"
        },
        {
          "id": "province",
          "label": "Province"
        },
        {
          "id": "quarter",
          "label": "Quarter"
        },
        {
          "id": "region",
          "label": "Region"
        },
        {
          "id": "river",
          "label": "River"
        },
        {
          "id": "settlement",
          "label": "Settlement"
        },
        {
          "id": "state",
          "label": "State"
        },
        {
          "id": "synagogue",
          "label": "Synagogue"
        },
        {
          "id": "temple",
          "label": "Temple"
        },
        {
          "id": "unknown",
          "label": "Unknown"
        }
      ],
      "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "id",
        "label"
      ],
      "unevaluatedProperties": false
    },
    "pref_name": {
      "type": "string",
      "minLength": 1
    },
    "alt_name": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "minLength": 1
      },
      "unevaluatedItems": false
    },
    "desc": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "rel_con": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A related concept to a given entity provided by another authority file. May be connected via a skos:closeMatch property",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "format": "uri",
            "minLength": 1
          },
          "source": {
            "enum": [
              "HAF",
              "LoC",
              "Perseus",
              "Pinakes",
              "Pleiades",
              "Syriaca",
              "VIAF"
            ]
          }
        },
        "required": [
          "label",
          "uri",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "refno": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A reference number in a standard reference work, such as the Corpus Clavium Graecorum (CPG)",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "idno": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "enum": [
              "CPG",
              "CPL",
              "TLG"
            ]
          }
        },
        "required": [
          "label",
          "idno",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "bib": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://raw.githubusercontent.com/UCLALibrary/sinai_metadata/master/data-model/jsonschemas/bib.json",
        "title": "Bibliography",
        "description": "A bibliographic citation connected with an object or entity",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "range": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "alt_shelf": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "note": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string"
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "id",
          "type"
        ],
        "if": {
          "properties": {
            "type": {
              "const": {
                "id": "otherdigversion",
                "label": "Other Digital Version"
              }
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "url": {
              "type": "string",
              "minLength": 1
            },
            "id": {
              "type": "string",
              "format": "uuid"
            }
          },
          "required": [
            "id",
            "type",
            "url"
          ]
        },
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "note": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      },
      "unevaluatedItems": false
    },
    "rel_place": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "description": "A unique Archival Resource Key (ARK)",
                "type": "string",
                "pattern": "^ark:/21198/([a-z]|[0-9])+"
              },
              "source": {
                "type": [
                  "array",
                  "null"
                ],
                "items": {
                  "type": "string"
                },
                "unevaluatedItems": false
              }
            },
            "required": [
              "id"
            ]
          }
        ],
        "properties": {
          "rel": {
            "type": "array",
            "items": {
              "enum": [
                {
                  "id": "part-of",
                  "label": "Part Of"
                }
              ],
              "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1
                },
                "label": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "id",
                "label"
              ],
              "unevaluatedProperties": false
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "rel"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "cataloguer": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "minLength": 1
          },
          "contributor": {
            "description": "The person responsible for the intellectual contributions made to the record via this change",
            "type": "string",
            "minLength": 1,
            "$comment": "TBD: Possibly revise the format or restrict to a set of ID-like values rather than entering name forms"
          },
          "added_by": {
            "description": "The user account responsible for editing the JSON record, likely supplied by the content management system",
            "type": "string",
            "minLength": 1,
            "$comment": "TBD: Possibly revise the format or restrict to a set of ID-like values rather than entering name forms"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "minLength": 1
          }
        },
        "required": [
          "message",
          "added_by",
          "timestamp"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    }
  },
  "required": [
    "ark",
    "type",
    "pref_name"
  ],
  "unevaluatedProperties": false
}